{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {% if not app.user %}
        <a href="/login">Connectez vous</a>
    {% endif %}
    {% if app.user %}

        <div class="profile">
            <h1>Bienvenue !</h1>
            <div class="profileProjectList">
                <div class="lastProjects">
                    <h2>Derniers projets</h2>
                    <table style="width:100%;">
                    <tr>
                        <th>
                            Nom :
                        </th>
                        <th>
                            Statut :
                        </th>
                        <th>
                            Accéder
                        </th>
                    </tr>
                        {% for project in projects %}
                            {% if project.projectTeam == app.user.team %}
                            <tr>
                                <td colspan="1">{{ project.name }}</td>
                                <td colspan="1">{{ project.status.name }}</td>
                                <td>
                                    <a href="{{ path('projet_vue', { id: project.id }) }}">voir</a>
                                </td>
                            </tr>
                            {% endif %}
                        {% endfor %}
                    </table>
                </div>
                <div class="lastTeamProjects">
                    <h2>Derniers projets de l'équipe</h2>
                </div>
                <div class="riskyProjects">
                    <h2>Projets à risque</h2>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
