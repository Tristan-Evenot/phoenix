<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="/build/images/Capture_d_écran_2022-02-22_141721-removebg-preview (1).png">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                <li class="li_logo_menu">
                    <a class="logo_menu" href="#">
                        <img src="/build/images/Capture_d_écran_2022-02-22_141721-removebg-preview (1).png">
                    </a>
                </li>
                <li class="nav-item{{ app.request.attributes.get('_route') == 'projects' ? ' active' : '' }}">
                    <a class="nav-link" href={{path('projects')}}>Projets</a>
                </li>
                <li class="nav-item{{ app.request.attributes.get('_route') == 'profile' ? ' active' : '' }}">
                    <a class="nav-link" href={{path('profile')}}>Profil</a>
                </li>
                </ul>
                {% if app.user != null %}
                <a href={{path('app_logout')}}>
                    <button class="btn btn-warning my-2 my-sm-0" type="submit">Déconnexion</button>
                </a>
                {% endif %}
                {% if app.user == null %}
                    <a href={{path('app_login')}}>
                        <button class="btn btn-warning my-2 my-sm-0" type="submit">Connexion</button>
                    </a>
                {% endif %}
            </div>
            </nav>
        {% block body %}{% endblock %}
    </body>
</html>
